<Window x:Class="Messenger.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Messenger.Converters"
        Title="Профиль"
        Height="700"
        Width="500"
        MinHeight="600"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InitialsConverter x:Key="InitialsConverter"/>
        <converters:AvailabilityToColorConverter x:Key="AvailabilityToColorConverter" />
        <converters:AvailabilityToIconConverter x:Key="AvailabilityToIconConverter" />
        <converters:IsEditingToReadOnlyConverter x:Key="IsEditingToReadOnlyConverter" />
        <converters:IsCheckingToVisibilityConverter x:Key="IsCheckingToVisibilityConverter" />
        <converters:EmailValidationConverter x:Key="EmailValidationConverter" />
        <converters:FieldValidationIconConverter x:Key="FieldValidationIconConverter" />
        <converters:FieldValidationTextConverter x:Key="FieldValidationTextConverter" />
        <converters:RequiredFieldConverter x:Key="RequiredFieldConverter" />


        <Style x:Key="EditableTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ValidationIndicator" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValidationText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666666"/>
        </Style>

        <Style x:Key="SectionContainer" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка "Back" -->
                <Button Grid.Column="0"
                        Command="{Binding BackToMainCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        Padding="8"
                        FontSize="14">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Назад"/>
                    </StackPanel>
                </Button>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="Мой профиль"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Кнопки "Edit/Save" Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding StartEditingCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            Padding="8"
                            FontSize="14"
                            Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse}">
                        <TextBlock Text="✏️ Редактировать"/>
                    </Button>

                    <Button Command="{Binding SaveProfileCommand}"
                            Background="#4CAF50"
                            BorderThickness="0"
                            Foreground="White"
                            Padding="12,8"
                            FontSize="14"
                            Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="💾 Сохранить"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Выбор аватара -->
                <Border Style="{StaticResource SectionContainer}">
                    <StackPanel HorizontalAlignment="Center">

                        <Button Command="{Binding StartEditingCommand}"
                Background="#0078D4"
                BorderThickness="0"
                Foreground="White"
                Padding="15,8"
                Margin="0,0,0,15"
                FontSize="14"
                FontWeight="Bold" Cursor="">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✏️" Margin="0,0,8,0"/>
                                <TextBlock Text="НАЧАТЬ РЕДАКТИРОВАНИЕ"/>
                            </StackPanel>
                        </Button>
                        <!-- Изображение аватара со статусом -->
                        <Border Width="120" 
                                Height="120" 
                                CornerRadius="60"
                                Background="#E0E0E0"
                                BorderThickness="3"
                                BorderBrush="{Binding AvatarStatusColor}"
                                Margin="0,0,0,10">

                            <!-- Clip для круглой обрезки -->
                            <Border.Clip>
                                <EllipseGeometry RadiusX="60" RadiusY="60" Center="60,60"/>
                            </Border.Clip>

                            <Grid>
                                <!-- Изображение аватара -->
                                <Image Source="{Binding AvatarImage}" 
               Stretch="UniformToFill"/>

                                <!-- Наложение дефолтного аватара -->
                                <Border Background="#80000000" 
                                        Visibility="{Binding IsAvatarDefault, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="{Binding DisplayName, Converter={StaticResource InitialsConverter}}"
                                               Foreground="White"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Загрузка наложения -->
                                <Border Background="#80000000" 
                                        Visibility="{Binding IsUploadingAvatar, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <TextBlock Text="Загрузка..."
                                                   Foreground="White"
                                                   FontSize="12"/>
                                                                <ProgressBar IsIndeterminate="True"
                                                     Width="60"
                                                     Height="4"
                                                     Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Информация об аватаре -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="{Binding AvatarInfo}"
                       FontSize="12"
                       Foreground="#666"
                       HorizontalAlignment="Center"/>

                            <!-- Статус аватара -->
                            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,3,0,0">
                                <Ellipse Width="8" 
                         Height="8" 
                         Fill="{Binding AvatarStatusColor}"
                         Margin="0,0,5,0"
                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding AvatarStatus}"
                           FontSize="11"
                           Foreground="#666" Cursor=""/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Управление аватаром -->
                        <StackPanel>
                            <!-- Кнопка смены аватара -->
                            <Button Command="{Binding ChangeAvatarCommand}"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    BorderBrush="#0078D4"
                                    Foreground="#0078D4"
                                    Padding="10,6"
                                    Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🖼️" Margin="0,0,5,0"/>
                                    <TextBlock Text="Сменить аватар"/>
                                </StackPanel>
                            </Button>

                            <!-- Кнопка «Загрузить на ImgBB» -->
                            <Button Command="{Binding UploadAvatarToImgBBCommand}"
                                    Background="#4CAF50"
                                    BorderThickness="0"
                                    Foreground="White"
                                    Padding="10,6"
                                    Margin="0,0,0,5"
                                    IsEnabled="{Binding HasAvatarChanges}">
                                <!-- Убрали Visibility - теперь всегда видна -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="☁️" Margin="0,0,5,0"/>
                                    <TextBlock Text="Загрузить на ImgBB"/>
                                </StackPanel>
                            </Button>

                            <!-- Кнопка «Удалить аватар» -->
                            <Button Command="{Binding RemoveAvatarCommand}"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    BorderBrush="#FF5252"
                                    Foreground="#FF5252"
                                    Padding="10,6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" Margin="0,0,5,0"/>
                                    <TextBlock Text="Удалить аватар"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Основная информация -->
                <Border Style="{StaticResource SectionContainer}">
                    <StackPanel>
                        <TextBlock Text="Основная информация" Style="{StaticResource SectionHeader}"/>

                        <!-- Username -->
                        <StackPanel Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Логин" Style="{StaticResource FieldLabel}"/>
                                <TextBlock Text="*" Foreground="Red" Margin="2,0,0,0"/>

                                <!-- Индикатор проверки -->
                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0"
                            Visibility="{Binding IsCheckingAvailability, Converter={StaticResource IsCheckingToVisibilityConverter}}">
                                    <TextBlock Text="🔍" FontSize="10" Margin="0,0,2,0"/>
                                    <TextBlock Text="Проверка..." FontSize="10" Foreground="Gray"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0"
                            Visibility="{Binding IsCheckingAvailability, Converter={StaticResource IsCheckingToVisibilityConverter}, ConverterParameter=Inverse}">
                                    <TextBlock Text="{Binding IsUsernameAvailable, Converter={StaticResource AvailabilityToIconConverter}}" 
                               FontSize="10" Margin="0,0,2,0"/>
                                    <TextBlock Text="{Binding IsUsernameAvailable, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"
                               FontSize="10" Foreground="Green">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Доступно"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUsernameAvailable}" Value="False">
                                                        <Setter Property="Text" Value="Занято"/>
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsEditing}"
                     Style="{StaticResource EditableTextBox}"
                     BorderBrush="{Binding IsUsernameAvailable, Converter={StaticResource AvailabilityToColorConverter}}"/>
                        </StackPanel>

                        <!-- Display Name -->
                        <StackPanel Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Отображаемое имя" Style="{StaticResource FieldLabel}"/>
                                <TextBlock Text="*" Foreground="Red" Margin="2,0,0,0"/>
                            </StackPanel>
                            <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsEditing}"
                     Style="{StaticResource EditableTextBox}"
                     BorderBrush="{Binding DisplayName, Converter={StaticResource RequiredFieldConverter}}"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Email" Style="{StaticResource FieldLabel}"/>
                                <TextBlock Text="*" Foreground="Red" Margin="2,0,0,0"/>

                                <!-- Индикатор проверки -->
                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0"
                            Visibility="{Binding IsCheckingAvailability, Converter={StaticResource IsCheckingToVisibilityConverter}}">
                                    <TextBlock Text="🔍" FontSize="10" Margin="0,0,2,0"/>
                                    <TextBlock Text="Проверка..." FontSize="10" Foreground="Gray"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0"
                            Visibility="{Binding IsCheckingAvailability, Converter={StaticResource IsCheckingToVisibilityConverter}, ConverterParameter=Inverse}">
                                    <TextBlock Text="{Binding IsEmailAvailable, Converter={StaticResource AvailabilityToIconConverter}}" 
                               FontSize="10" Margin="0,0,2,0"/>
                                    <TextBlock Text="{Binding IsEmailAvailable, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"
                               FontSize="10" Foreground="Green">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Доступен"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEmailAvailable}" Value="False">
                                                        <Setter Property="Text" Value="Занят"/>
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsEditing}"
                     Style="{StaticResource EditableTextBox}"
                     BorderBrush="{Binding IsEmailAvailable, Converter={StaticResource AvailabilityToColorConverter}}"/>
                        </StackPanel>

                        <!-- Статус -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Статус" Style="{StaticResource FieldLabel}"/>
                            <ComboBox ItemsSource="{Binding AvailableStatuses}"
                      SelectedItem="{Binding SelectedStatus}"
                      IsEnabled="{Binding IsEditing}"
                      Padding="10"
                      FontSize="14"
                      Margin="0,5,0,0">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="FontSize" Value="14"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Персональная информация -->
                <Border Style="{StaticResource SectionContainer}">
                    <StackPanel>
                        <TextBlock Text="Личная информация" Style="{StaticResource SectionHeader}"/>

                        <!-- Пол -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Пол" Style="{StaticResource FieldLabel}"/>
                            <ComboBox ItemsSource="{Binding AvailableGenders}"
                                      SelectedItem="{Binding SelectedGender}"
                                      IsEnabled="{Binding IsEditing}"
                                      Padding="10"
                                      FontSize="14"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Дата рождения -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Дата рождения" Style="{StaticResource FieldLabel}"/>
                            <DatePicker SelectedDate="{Binding BirthDate}"
                                        IsEnabled="{Binding IsEditing}"
                                        FontSize="14"
                                        Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Языки -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Языки общения" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Languages}"
                                     IsEnabled="{Binding IsEditing}"
                                     Style="{StaticResource EditableTextBox}"/>
                        </StackPanel>

                        <!-- Страна -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Страна" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Country}"
                                     IsEnabled="{Binding IsEditing}"
                                     Style="{StaticResource EditableTextBox}"/>
                        </StackPanel>

                        <!-- Город -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Город" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding City}"
                                     IsEnabled="{Binding IsEditing}"
                                     Style="{StaticResource EditableTextBox}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Bio -->
                <Border Style="{StaticResource SectionContainer}">
                    <StackPanel>
                        <TextBlock Text="О себе" Style="{StaticResource SectionHeader}"/>

                        <TextBox Text="{Binding Bio}"
                                 IsEnabled="{Binding IsEditing}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MinHeight="100"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource EditableTextBox}"/>
                    </StackPanel>
                </Border>

                <!-- Настройки -->
                <Border Style="{StaticResource SectionContainer}">
                    <StackPanel>
                        <TextBlock Text="Настройки приложения" Style="{StaticResource SectionHeader}"/>

                        <!-- Превью темы -->
                        <Border Background="{Binding ThemePreviewBackground}"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15"
                BorderThickness="1"
                BorderBrush="{Binding ThemePreviewForeground}">
                            <StackPanel>
                                <TextBlock Text="Пример текста"
                           Foreground="{Binding ThemePreviewForeground}"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                                <TextBlock Text="Это пример как будет выглядеть тема"
                           Foreground="{Binding ThemePreviewForeground}"
                           FontSize="12"
                           Opacity="0.8"/>
                            </StackPanel>
                        </Border>

                        <!-- Выбор темы -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Тема оформления" Style="{StaticResource FieldLabel}"/>

                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <RadioButton Content="🌞 Светлая"
                             GroupName="Theme"
                             Margin="0,0,15,0"
                             FontSize="14"
                             IsChecked="{Binding IsLightTheme}"
                             Command="{Binding ApplyLightThemeCommand}"/>

                                <RadioButton Content="🌙 Темная"
                             GroupName="Theme"
                             FontSize="14"
                             IsChecked="{Binding IsDarkTheme}"
                             Command="{Binding ApplyDarkThemeCommand}"/>
                            </StackPanel>

                            <Button Content="🔄 Переключить тему"
                    Command="{Binding ToggleThemeCommand}"
                    Margin="0,10,0,0"
                    Background="Transparent"
                    BorderThickness="1"
                    BorderBrush="#0078D4"
                    Foreground="#0078D4"
                    Padding="8,4"/>
                        </StackPanel>

                        <!-- Другие настройки -->
                        <StackPanel>
                            <TextBlock Text="Уведомления" Style="{StaticResource FieldLabel}"/>

                            <CheckBox Content="🔔 Звуковые уведомления"
                      IsChecked="{Binding SoundNotifications}"
                      Margin="0,5,0,5"
                      FontSize="14"/>

                            <CheckBox Content="💬 Всплывающие сообщения"
                      IsChecked="{Binding PopupNotifications}"
                      Margin="0,5,0,10"
                      FontSize="14"/>

                            <TextBlock Text="Файлы" Style="{StaticResource FieldLabel}"/>

                            <CheckBox Content="💾 Автосохранение файлов"
                      IsChecked="{Binding AutoSaveFiles}"
                      Margin="0,5,0,0"
                      FontSize="14"/>
                        </StackPanel>

                        <!-- Кнопка сохранения настроек -->
                        <Button Content="💾 Сохранить настройки"
                Command="{Binding SaveThemeSettingsCommand}"
                Margin="0,15,0,0"
                Background="#0078D4"
                BorderThickness="0"
                Foreground="White"
                Padding="12,8"
                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Сообщение об ошибке -->
                <Border Background="#FFEBEE"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,20,0,0"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#D32F2F"
                               TextWrapping="Wrap"
                               FontSize="14"/>
                </Border>

                <!-- Индикатор загрузки -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,20,0,0"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Сохранение..."
                                   FontSize="14"
                                   Foreground="#666666"
                                   Margin="0,0,0,10"/>
                        <ProgressBar IsIndeterminate="True"
                                     Height="4"
                                     Width="200"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
        Background="White"
        Padding="16"
        BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Индикатор состояния (левая часть) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Индикатор проверки имени пользователя -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0"
                        Visibility="{Binding IsCheckingAvailability, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="🔍" FontSize="12" Margin="0,0,3,0"/>
                        <TextBlock Text="Проверка доступности..." FontSize="11" Foreground="Gray"/>
                    </StackPanel>

                    <!-- Индикатор валидации полей -->
                    <StackPanel Orientation="Horizontal">
                        <Border Width="8" Height="8" CornerRadius="4" Margin="0,0,3,0"
                        Background="{Binding IsUsernameAvailable, Converter={StaticResource AvailabilityToColorConverter}}"/>
                        <TextBlock Text="Логин" FontSize="11" Foreground="#666"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Border Width="8" Height="8" CornerRadius="4" Margin="0,0,3,0"
                        Background="{Binding IsEmailAvailable, Converter={StaticResource AvailabilityToColorConverter}}"/>
                        <TextBlock Text="Email" FontSize="11" Foreground="#666"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Border Width="8" Height="8" CornerRadius="4" Margin="0,0,3,0"
                        Background="{Binding DisplayName, Converter={StaticResource RequiredFieldConverter}}"/>
                        <TextBlock Text="Имя" FontSize="11" Foreground="#666"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка «Отмена» -->
                <Button Grid.Column="1"
                Command="{Binding CancelEditingCommand}"
                Background="Transparent"
                BorderThickness="1"
                BorderBrush="#CCCCCC"
                Foreground="#666666"
                Padding="12,8"
                FontSize="14"
                Margin="0,0,10,0"
                Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Отмена"/>
                </Button>

                <!-- Кнопка «Изменить пароль» -->
                <Button Grid.Column="2"
                Command="{Binding ChangePasswordCommand}"
                Background="Transparent"
                BorderThickness="1"
                BorderBrush="#0078D4"
                Foreground="#0078D4"
                Padding="12,8"
                FontSize="14">
                    <TextBlock Text="Изменить пароль"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>