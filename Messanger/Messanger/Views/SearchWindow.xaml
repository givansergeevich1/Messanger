<Window x:Class="Messenger.Views.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Messenger.Converters"
        Title="Поиск пользователей"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:UserStatusToStringConverter x:Key="UserStatusToStringConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Поле поиска -->
        <Border Grid.Row="0" Background="#0078D4" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchTextBox"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         Height="40"
                         Padding="10"
                         FontSize="14"
                         VerticalContentAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1"
                        Command="{Binding SearchCommand}"
                        Margin="10,0,0,0"
                        Width="40"
                        Height="40"
                        Background="White"
                        Foreground="#0078D4">
                    <TextBlock Text="🔍" FontSize="16"/>
                </Button>
            </Grid>
        </Border>

        <!-- Список результатов -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding SearchResults}"
                 SelectedItem="{Binding SelectedUser}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12" Background="Transparent" Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Аватар -->
                            <Ellipse Grid.Column="0" 
                                     Width="40" 
                                     Height="40" 
                                     Margin="0,0,12,0">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="LightGray"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Информация о пользователе -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DisplayName}" 
                                           FontWeight="Bold" 
                                           FontSize="14"/>
                                <TextBlock Text="{Binding Username}" 
                                           Foreground="#666666" 
                                           FontSize="12"/>
                                <TextBlock Text="{Binding Status, Converter={StaticResource UserStatusToStringConverter}}" 
                                           FontSize="11"/>
                            </StackPanel>

                            <!-- Кнопка действия -->
                            <Button Grid.Column="2"
                                    Command="{Binding DataContext.StartChatCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    Content="Написать"
                                    Padding="12,6"
                                    Background="#0078D4"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>