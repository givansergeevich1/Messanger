<Window x:Class="Messenger.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Messenger.Converters"
        Title="Messenger"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">

    <Window.Resources>
        <!-- Стиль для кнопок-иконок -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00c2c2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00c2c2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 1. Базовые конвертеры -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:FileTypeToIconConverter x:Key="FileTypeToIconConverter" />
        <converters:FileSizeConverter x:Key="FileSizeConverter" />
        

        <!-- 2. Конвертеры для сообщений -->
        <converters:AlignmentConverter x:Key="AlignmentConverter" />
        <converters:MessageStatusToIconConverter x:Key="MessageStatusToIconConverter" />
        <converters:MessageStatusToColorConverter x:Key="MessageStatusToColorConverter" />
        <converters:MessageBackgroundConverter x:Key="MessageBackgroundConverter" />
        <converters:MessageTextColorConverter x:Key="MessageTextColorConverter" />


        <!-- Стиль для удаленных сообщений -->
        <Style x:Key="DeletedMessageStyle" TargetType="Border">
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Background" Value="#F0F0F0"/>
        </Style>
        
        
        <converters:MessageTimeColorConverter x:Key="MessageTimeColorConverter" />
        <converters:IsDeletedToStyleConverter x:Key="IsDeletedToStyleConverter"/>

        <converters:BooleanToFontStyleConverter x:Key="BooleanToFontStyleConverter"/>
        

    

        <!-- 3. Конвертеры для профиля -->
        <converters:UserStatusToStringConverter x:Key="UserStatusToStringConverter" />
        <converters:UserStatusToColorConverter x:Key="UserStatusToColorConverter" />

        <converters:LeftPanelBackgroundConverter x:Key="LeftPanelBackgroundConverter"/>


        <!-- 4. Конвертеры для чатов  -->
        <converters:ChatTypeToIconConverter x:Key="ChatTypeToIconConverter" />
        <converters:ChatTypeToColorConverter x:Key="ChatTypeToColorConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />

        <!-- 5. Стандартный конвертер WPF -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ========== ЛЕВАЯ ПАНЕЛЬ - СПИСОК ЧАТОВ  ========== -->
        <Grid Grid.Column="0" x:Name="LeftPanelGrid" Background="#F8F9FA">
            <Grid.RowDefinitions>
                <!-- Панель профиля пользователя -->
                <RowDefinition Height="Auto"/>
                <!-- Поиск чатов -->
                <RowDefinition Height="Auto"/>
                <!-- Заголовок списка чатов -->
                <RowDefinition Height="Auto"/>
                <!-- Список чатов -->
                <RowDefinition Height="*"/>
                <!-- Нижняя панель с кнопками -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
        Background="#0084FF" 
        Padding="15,10"
        BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Аватар пользователя -->
                    <Border Grid.Column="0" 
                            Width="40" 
                            Height="40"
                            CornerRadius="20"
                            Background="#E0E0E0"
                            Margin="0,0,10,0">
                        <Border.Clip>
                            <EllipseGeometry RadiusX="20" RadiusY="20" Center="20,20"/>
                        </Border.Clip>

                        <Grid>
                            <!-- Реальный аватар -->
                            <Image Source="{Binding CurrentUser.AvatarImage}" 
               Stretch="UniformToFill"
               Visibility="{Binding CurrentUser.HasAvatar, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <!-- Дефолтный аватар с инициалами -->
                            <Border Background="#4A90E2"
                Visibility="{Binding CurrentUser.HasAvatar, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse}">
                                <TextBlock Text="{Binding CurrentUser.Initials}"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Информация о пользователе -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentUser.DisplayName, FallbackValue='Пользователь'}" 
                       FontWeight="Bold" 
                       Foreground="White"
                       FontSize="14"/>
                        <TextBlock Text="{Binding CurrentUser.Status, Converter={StaticResource UserStatusToStringConverter}}"
                       Foreground="White"
                       FontSize="11"
                       Opacity="0.9"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" 
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                        <!-- Кнопка поиска пользователей -->
                        <Button Command="{Binding OpenSearchCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Content="🔍"
                    ToolTip="Поиск пользователей"
                    Margin="0,0,8,0"/>

                        <!-- Кнопка профиля -->
                        <Button Command="{Binding OpenProfileCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Content="👤"
                    ToolTip="Профиль"
                    Margin="0,0,8,0"/>

                        <!-- Кнопка выхода -->
                        <Button Command="{Binding LogoutCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Content="🚪"
                    ToolTip="Выйти"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- === ПОИСК ЧАТОВ === -->
            <Border Grid.Row="1" 
                    Background="White" 
                    Padding="10"
                    BorderThickness="0,0,0,1">
                <TextBox x:Name="SearchTextBox"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         MinHeight="35"
                         VerticalContentAlignment="Center"
                         Padding="10,0"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         VerticalAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="20">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              Margin="10,0,30,0"/>
                                                <TextBlock Text="🔍 Поиск чатов..." 
                                                           Foreground="#999"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           Margin="10,0,0,0"
                                                           IsHitTestVisible="False"
                                                           Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Border>

            <!-- === ЗАГОЛОВОК СПИСКА ЧАТОВ === -->
            <Border Grid.Row="2" 
                    Background="White" 
                    Padding="15,10"
                    BorderThickness="0,0,0,1">
                <TextBlock Text="Чаты"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="#333"/>
            </Border>

            <!-- === СПИСОК ЧАТОВ (ОСНОВНОЕ) === -->
            <ListBox Grid.Row="3"
         x:Name="ChatList"
         ItemsSource="{Binding FilteredChats}"
         SelectedItem="{Binding SelectedChat}"
         BorderThickness="0"
         Background="Transparent"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         SelectionChanged="ChatList_SelectionChanged">

                <!-- Убираем стандартное выделение -->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <!-- Шаблон каждого чата -->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="15,12" 
                    BorderThickness="0,0,0,1" 
                    BorderBrush="#F0F0F0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Иконка/аватар чата -->
                                <Grid Grid.Column="0" 
                                      Width="50" 
                                      Height="50"
                                      Margin="0,0,12,0">
                                    <!-- Фоновый круг -->
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <!-- Используем новый конвертер для цвета -->
                                            <MultiBinding Converter="{StaticResource ChatTypeToColorConverter}">
                                                <Binding Path="Type"/>
                                                <Binding Path="Id"/>
                                            </MultiBinding>
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <!-- Иконка внутри круга -->
                                    <TextBlock Text="{Binding Type, Converter={StaticResource ChatTypeToIconConverter}}"
                                               Foreground="White"
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Информация о чате -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <!-- Название чата -->
                                    <TextBlock Text="{Binding Name}" 
                                   FontWeight="Bold"
                                   FontSize="13"
                                   Foreground="#333"
                                   TextTrimming="CharacterEllipsis"/>

                                    <!-- Последнее сообщение (будет работать, когда добавите свойства в модель Chat) -->
                                    <TextBlock Text="{Binding LastMessagePreview, FallbackValue='Нет сообщений'}"
                                   FontSize="12"
                                   Foreground="#666"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,2,0,0"/>

                                    <!-- Время последнего сообщения -->
                                    <TextBlock Text="{Binding LastMessageTime}"
                                   FontSize="11"
                                   Foreground="#999"
                                   Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- Бейдж непрочитанных сообщений -->
                                <Border Grid.Column="2"
                            Width="20"
                            Height="20"
                            CornerRadius="10"
                            Background="#0084FF"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Visibility="{Binding UnreadCount, Converter={StaticResource CountToVisibilityConverter}}">
                                    <TextBlock Text="{Binding UnreadCount}"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- === НИЖНЯЯ ПАНЕЛЬ (кнопки) === -->
            <Border Grid.Row="4" 
                    Background="White" 
                    Padding="10"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Кнопка нового чата -->
                    <Button Command="{Binding NewChatCommand}"
                            ToolTip="Новый чат"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⊕" 
                                       FontSize="16"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Новый чат"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Разделитель -->
                    <Rectangle Width="1" Height="20" Fill="#E0E0E0" Margin="15,0"/>

                    <!-- Кнопка поиска пользователей -->
                    <Button Command="{Binding SearchUsersCommand}"
                            ToolTip="Поиск пользователей"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" 
                                       FontSize="14"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Поиск"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ========== ПРАВАЯ ПАНЕЛЬ - ЧАТ ========== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок чата -->
            <Border Grid.Row="0" Background="#0084FF" Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Иконка чата -->
                    <Border Grid.Column="0" 
                Width="36" 
                Height="36"
                CornerRadius="18"
                Margin="0,0,12,0"
                Background="#FFFFFF30">
                        <TextBlock Text="💬"
                       Foreground="White"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                    </Border>

                    <!-- Название чата -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedChat.Name, FallbackValue='Выберите чат'}" 
                       FontWeight="Bold" 
                       Foreground="White"
                       FontSize="14"/>
                    </StackPanel>

                    <!-- Кнопки действий в чате -->
                    <StackPanel Grid.Column="2" 
                    Orientation="Horizontal"
                    VerticalAlignment="Center">

                        <!-- Кнопка прикрепления файла -->
                        <Button Command="{Binding AttachFileCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Content="📎"
                    ToolTip="Прикрепить файл"
                    Margin="0,0,8,0"/>

                        <!-- Кнопка меню чата -->
                        <Button Command="{Binding OpenChatMenuCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Content="⋮"
                    ToolTip="Меню чата"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Сообщения -->
            <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer">
                <ItemsControl 
                    ItemsSource="{Binding Messages}"
                    Background="Transparent"
                    BorderThickness="0">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Border с сообщением -->
                            <Border Margin="10,6" 
                Padding="12,10" 
                CornerRadius="12" 
                MaxWidth="500"
                HorizontalAlignment="{Binding IsCurrentUser, Converter={StaticResource AlignmentConverter}}"
                Background="{Binding IsCurrentUser, Converter={StaticResource MessageBackgroundConverter}}"
                Style="{Binding IsDeleted, Converter={StaticResource IsDeletedToStyleConverter}}">

                                <Border.ContextMenu>
                                    <ContextMenu x:Name="MessageContextMenu">
                                        <MenuItem Header="Копировать текст" 
                                                  Click="CopyMessageText_Click"/>

                                        <MenuItem Header="Редактировать" 
                                                Click="EditMessage_Click"
                                                 Visibility="{Binding IsCurrentUser, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <MenuItem Header="Удалить" 
                                                Click="DeleteMessage_Click"
                                                Visibility="{Binding IsCurrentUser, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <Separator/>

                                        <MenuItem Header="Скачать файл" 
                                                Click="DownloadFile_Click"
                                                Visibility="{Binding HasAttachment, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <MenuItem Header="Информация" 
                                                Click="ShowMessageInfo_Click"/>
                                    </ContextMenu>
                                </Border.ContextMenu>

                                <!-- Остальная разметка сообщения -->
                                <StackPanel>
                                    <!-- Имя отправителя -->
                                    <TextBlock Text="{Binding SenderName}" 
                           FontWeight="Bold" 
                           Foreground="{Binding IsCurrentUser, Converter={StaticResource MessageTextColorConverter}}"/>

                                    <!-- Текст "Сообщение удалено" (ДОБАВЬТЕ ЭТОТ БЛОК) -->
                                    <TextBlock Text="🗑️ Сообщение удалено" 
                           FontStyle="Italic"
                           Foreground="Gray"
                           FontSize="11"
                           Margin="0,2,0,4"
                           Visibility="{Binding IsDeleted, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                    <!-- Содержимое сообщения -->
                                    <StackPanel Margin="0,4,0,0">
                                        <!-- Если это файл -->
                                        <Border Visibility="{Binding HasAttachment, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="{Binding IsCurrentUser, Converter={StaticResource MessageBackgroundConverter}}"
                            CornerRadius="8"
                            Padding="10"
                            Margin="0,0,0,5"
                            Cursor="Hand"
                            ToolTip="Нажмите для скачивания">

                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                     Command="{Binding DataContext.DownloadFileCommand, 
                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                     CommandParameter="{Binding}"/>
                                            </Border.InputBindings>

                                            <StackPanel>
                                                <TextBlock Text="{Binding FileName}"
                                   FontWeight="SemiBold"
                                   Foreground="{Binding IsCurrentUser, Converter={StaticResource MessageTextColorConverter}}"/>

                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding FileType, Converter={StaticResource FileTypeToIconConverter}}"
                                       Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}"
                                       Foreground="{Binding IsCurrentUser, Converter={StaticResource MessageTimeColorConverter}}"/>
                                                </StackPanel>

                                                <TextBlock Text="Нажмите для скачивания"
                                   FontSize="10"
                                   FontStyle="Italic"
                                   Foreground="{Binding IsCurrentUser, Converter={StaticResource MessageTimeColorConverter}}"
                                   Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Текст сообщения -->
                                        <TextBlock Text="{Binding Content}" 
                               TextWrapping="Wrap" 
                               Foreground="{Binding IsCurrentUser, Converter={StaticResource MessageTextColorConverter}}"
                               Visibility="{Binding Content, Converter={StaticResource StringToVisibilityConverter}}"
                               FontStyle="{Binding IsDeleted, Converter={StaticResource BooleanToFontStyleConverter}}"/>
                                    </StackPanel>

                                    <!-- Время и статус -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <!-- Время -->
                                        <TextBlock Text="{Binding DisplayTime}" 
                               FontSize="10" 
                               Foreground="{Binding IsCurrentUser, Converter={StaticResource MessageTimeColorConverter}}"
                               Margin="0,4,4,0"/>

                                        <!-- Статус и иконка редактирования -->
                                        <TextBlock Text="{Binding Status, Converter={StaticResource MessageStatusToIconConverter}}" 
                               FontSize="10"
                               Foreground="{Binding Status, Converter={StaticResource MessageStatusToColorConverter}}"
                               Margin="0,4,4,0"
                               VerticalAlignment="Center"/>

                                        <!-- Иконка "редактировано" -->
                                        <TextBlock Text="✏️" 
                               FontSize="10"
                               Foreground="Gray"
                               Margin="0,4,0,0"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsEdited, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <!-- Поле ввода -->
            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         x:Name="MessageInput"
                         Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}"
                         MinHeight="40"
                         VerticalContentAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1" 
                        Command="{Binding SendMessageCommand}"
                        Margin="10,0,0,0"
                        Padding="20,10" 
                        Content="Отправить"/>
            </Grid>
        </Grid>
    </Grid>
</Window>