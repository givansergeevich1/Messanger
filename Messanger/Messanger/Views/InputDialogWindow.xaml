<Window x:Class="Messenger.Views.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Промпт -->
        <TextBlock x:Name="PromptText" 
                   Grid.Row="0" 
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <!-- Текстовое поле -->
        <TextBox x:Name="InputTextBox" 
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14"
                 BorderBrush="#007ACC"
                 BorderThickness="2"
                 Padding="5"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="ОК" 
                    Width="80" 
                    Height="30"
                    Margin="5"
                    Click="OkButton_Click"
                    Background="#007ACC"
                    Foreground="White"
                    IsDefault="True"/>

            <Button Content="Отмена" 
                    Width="80" 
                    Height="30"
                    Margin="5"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>